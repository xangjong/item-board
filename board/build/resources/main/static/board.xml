<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.board.mapper.BoardMapper">

    <!--게시글 입력-->
    <insert id ="insert" parameterType="com.spring.board.dto.Board" >

        INSERT INTO board VALUES (#{bno}, #{title}, #{content},now(),0);
    </insert>
    <!--    <select id="boardCount" resultType="int">
            SELECT count(bno) AS cbt FROM board;
        </select>-->
        <!-- 게시글 리스트 -->
        <select id="list" resultType="com.spring.board.dto.Board">
            SELECT
                *
            FROM board order by bno desc;
        </select>
<!--  조회수 증가  -->
    <update id="readCnt" parameterType="int">
        update board set readCnt = readCnt + 1 where bno = #{bno}
    </update>
<!-- 게시글 상세 보기 / parameterType 받아오는 데이터 타입 / resultType 반환 타입 -->
    <select id="select" parameterType="integer" resultType="com.spring.board.dto.Board">
        select * from board where bno = #{bno}
    </select>
      <!--  <select id ="findById" parameterType="Long" resultType="com.example.blog_board.domain.Board">
            SELECT * FROM board WHERE bno=#{bno};
        </select>-->


    <update id ="update" parameterType="com.spring.board.dto.Board">
        UPDATE board
        SET title = #{title},
            content = #{content}
        WHERE bno = #{bno};
    </update>

    <delete id ="delete" parameterType="int">
        DELETE
        FROM board
        WHERE bno = #{bno};
    </delete>



</mapper>